@model IEnumerable<Department>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <a href="/Department/Create" class="btn btn btn-success">Create</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Operation</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="/Department/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Department/Delete/@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </table>

</body>
</html>
