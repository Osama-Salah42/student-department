@model IEnumerable<Student>
@{
    //Layout = ;
}


    <a href="/Student/Create" class="btn btn btn-success">Create</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>Email</th>
                <th>Operation</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Departments?.Name</td>
                <td>@item.Email</td>
                <td>
                    <a href="/Student/Show/@item.Id" class="btn btn-info">Details</a>
                    <a href="/Student/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Student/Delete/@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </table>


